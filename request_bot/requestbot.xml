<context>
	<input pattern="/start">
		<context id="ready_to_call">	
			<output value="Кому звоним?"/>
			<input pattern="$Text">
				<var name="Args" value="javascript: $Text.split(' ')"/>
				<var name="Phone" value="javascript: $Args[0]"/>
				<var name="Surname" value="javascript: $Args[1]"/>
				<var name="Name" value="javascript: $Args[2]"/>
				<var name="Second_name" value="javascript: $Args[3]"/>
				<output value="Телефон: $Phone, Имя: $Name, Отчество: $Second_name, Фамилия: $Surname"/>
			</input>
		</context>
	</input>
</context>